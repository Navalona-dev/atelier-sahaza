{% extends 'base.html.twig' %}

{% block title %}Produit allimunium{% endblock %}

{% block stylesheets %}

    <style>
        .navbar {
            background-color: #4682B4 !important;
        }

        span.text-primary {
            color: #fff !important;
        }

        .nav-item {
            color: #fff !important;
        }
        .navbar .nav-link:hover, .navbar .nav-link.active {
            border-bottom: 1px solid #fff !important;
        }

        .btn-outline-primary {
            border: 1px solid #fff !important;
            color: #fff !important;
        }
        .product-list {
            margin-top: 150px;
            margin-bottom: 100px;
        }

        .last, .first {
            display: none;
        }

        .pagination a {
            text-decoration: none;
        }

       

        .pagination .page, .pagination .previous, .pagination .next {
            background-color: #272727;
            padding: 5px 12px;
            border-right: 1px solid #000;
        }

        .pagination .page a, .pagination .previous a, .pagination .next a {
            color: #fff;
        }

        .pagination .current {
            background-color: #4682B4;
            padding: 5px 12px;
            color: #fff;
        }
    </style>

{% endblock %}

{% set product = "" %}
{% for homePage in homePages %}
    {% if homePage.label == "produitAlluminium" %}
        {% set product = homePage %}
    {% endif %}
{% endfor %}

{% block body %}
<section class="product-list">
    <div class="container">
        <h1 class="text-center fw-bold mb-3"> {{product.title}} </h1>
        <p class="text-center mb-5"> {{product.description|raw}} </p>
        <div class="product-list-menu d-flex flex-wrap justify-content-center mb-5">
            <a href="#" class="text-decoration-none text-black menu-link active" data-category="all">Tous</a>
            {% for category in categories %}
                <a href="#" class="text-decoration-none text-black menu-link" data-category="{{ category.id }}"> {{ category.name }} </a>
            {% endfor %}
        </div>
        <div class="row product-container">
            {% for produit in products %}
                <div class="col-lg-4 col-md-6 mb-4 product-item" data-category="{{ produit.category.id }}">
                    <div class="position-relative overflow-hidden mb-2">
                        <img class="img-fluid rounded w-100" src="{{ asset('uploads/products/' ~ produit.image) }}" alt="">
                        <div class="product-btn bg-primary d-flex align-items-center justify-content-center">
                            <a href="{{path('app_front_produit', {'id' : produit.id})}}" data-lightbox="gallery">
                                <i class="fa fa-plus text-white" style="font-size: 60px;"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
</section>

{% endblock %}
